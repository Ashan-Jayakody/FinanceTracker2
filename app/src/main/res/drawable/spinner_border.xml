<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background fill (transparent in this case) -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the border stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/grey" />

    <!-- Optional: Add rounded corners -->
    <corners android:radius="4dp" />

    <!-- Optional: Add padding if you want space between the border and the content -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
